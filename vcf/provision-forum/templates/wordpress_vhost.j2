<VirtualHost *:80>
    ServerName {{ wordpress_domain }}
    DocumentRoot {{ new_document_root }}

    <Directory {{ new_document_root }}>
        AllowOverride All
        Require all granted
    </Directory>

    ErrorLog /var/log/httpd/wordpress_error.log
    CustomLog /var/log/httpd/wordpress_access.log combined
</VirtualHost>
